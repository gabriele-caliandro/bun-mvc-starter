{
  "name": "bun-mvc-starter",
  "module": "src/main.ts",
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=production bun src/main.ts",
    "dev-watch": "bun --watch src/main.ts",
    "tsc": "tsc",
    "tsgo": "bunx tsgo",
    "lint": "eslint src",
    "format": "prettier src --write",
    "build": "bun build src/main.ts --target bun --outdir ./dist",
    "build-binary": "bun build --compile --sourcemap --minify-whitespace --minify-syntax --target bun --outfile build/server src/main.ts",
    "start": "NODE_ENV=production bun dist/main.js",
    "start-binary": "./build/server"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/eslint": "^9.6.1",
    "@types/mqtt": "^2.5.0",
    "@types/pg": "^8.15.6",
    "@typescript-eslint/parser": "^8.47.0",
    "@typescript/native-preview": "^7.0.0-dev.20251120.1",
    "bun-types": "^1.3.2",
    "drizzle-kit": "^0.31.7",
    "prettier": "3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.0",
    "@elysiajs/openapi": "^1.4.11",
    "@elysiajs/swagger": "^1.3.1",
    "@eslint/js": "^9.39.1",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.43.1",
    "drizzle-typebox": "^0.3.3",
    "elysia": "^1.4.16",
    "eslint": "^9.39.1",
    "eslint-plugin-neverthrow": "^1.1.4",
    "mongodb": "^6.21.0",
    "mqtt": "^5.14.1",
    "neverthrow": "^8.2.0",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "pino-roll": "^4.0.0",
    "postgres": "^3.4.7",
    "typescript-eslint": "^8.47.0",
    "yaml": "^2.8.1",
    "zod": "^4.1.12"
  }
}
