{
  "name": "bun-mvc-starter",
  "version": "0.2.0",
  "module": "src/main.ts",
  "type": "module",
  "scripts": {
    "dev": "bun src/main.ts",
    "dev-watch": "bun --watch src/main.ts",
    "tsc": "tsc",
    "tsgo": "bunx tsgo",
    "lint": "eslint src",
    "format": "prettier src --write",
    "build": "bun build src/main.ts --target bun --outdir ./dist",
    "build-binary": "bun build --compile --sourcemap --minify-whitespace --minify-syntax --target bun --outfile build/server src/main.ts",
    "start": "NODE_ENV=production bun dist/main.js",
    "start-binary": "./build/server",
    "test:unit": "bunx vitest run",
    "test:integration": "bun run db:test:down && bun run db:test:up && bunx vitest run --config vitest.config.integration.ts && bun run db:test:down",
    "knip": "knip"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/eslint": "^9.6.1",
    "@types/node": "^24.7.1",
    "@types/pg": "^8.15.4",
    "@typescript-eslint/parser": "^8.38.0",
    "@typescript/native-preview": "^7.0.0-dev.20250618.1",
    "bun-types": "^1.1.38",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.32.0",
    "eslint-plugin-neverthrow": "^1.1.4",
    "knip": "^5.64.3",
    "prettier": "3.4.2",
    "tsx": "^4.20.3",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.18.2",
    "@eslint/js": "^9.17.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.3.0",
    "@elysiajs/eden": "^1.4.5",
    "@elysiajs/openapi": "^1.4.11",
    "ky": "^1.14.0",
    "mqtt": "^5.14.1",
    "date-fns": "^4.1.0",
    "drizzle-orm": "0.43.1",
    "drizzle-zod": "^0.8.3",
    "elysia": "^1.4.16",
    "neverthrow": "^8.2.0",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "pino-roll": "^4.0.0",
    "postgres": "^3.4.5",
    "slugify": "^1.6.6",
    "yaml": "^2.6.1",
    "zod": "^4.1.12"
  }
}
