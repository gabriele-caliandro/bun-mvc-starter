{
  "name": "bun-mvc-starter",
  "module": "src/main.ts",
  "type": "module",
  "scripts": {
    "dev": "bun src/main.ts",
    "dev-watch": "bun --watch src/main.ts",
    "tsc": "tsc",
    "tsgo": "bunx tsgo",
    "lint": "eslint src",
    "format": "prettier src --write",
    "build": "bun build src/main.ts --target bun --outdir ./dist",
    "build-binary": "bun build --compile --sourcemap --minify-whitespace --minify-syntax --target bun --outfile build/server src/main.ts",
    "start": "NODE_ENV=production bun dist/main.js",
    "start-binary": "./build/server"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/eslint": "^9.6.1",
    "@types/mqtt": "^2.5.0",
    "@types/pg": "^8.15.4",
    "@typescript-eslint/parser": "^8.38.0",
    "@typescript/native-preview": "^7.0.0-dev.20250618.1",
    "bun-types": "^1.1.38",
    "drizzle-kit": "^0.31.4",
    "prettier": "3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.6",
    "tsx": "^4.20.3",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.3.0",
    "@elysiajs/openapi": "^1.4.11",
    "@elysiajs/swagger": "^1.3.0",
    "@eslint/js": "^9.17.0",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.43.1",
    "drizzle-typebox": "^0.3.3",
    "elysia": "^1.4.15",
    "eslint": "^9.32.0",
    "eslint-plugin-neverthrow": "^1.1.4",
    "mongodb": "^6.20.0",
    "mqtt": "^5.13.1",
    "neverthrow": "^8.2.0",
    "postgres": "^3.4.5",
    "typescript-eslint": "^8.18.2",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "yaml": "^2.6.1",
    "zod": "^4.1.12"
  }
}
