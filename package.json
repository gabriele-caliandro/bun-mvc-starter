		"typescript": "^5.0.0"
	},
	"dependencies": {
		"@elysiajs/swagger": "^1.1.6",
		"date-fns": "^4.1.0",
		"elysia": "^1.1.26",
		"winston": "^3.17.0",
		"winston-daily-rotate-file": "^5.0.0",
		"yaml": "^2.6.1",
		"zod": "^3.24.1"
	}
}
